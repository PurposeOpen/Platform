<%= page_header @campaign.name  do %>
  <%= link_to icon("edit") + "Edit", edit_admin_movement_campaign_path(@movement, @campaign) %>
  <%= link_to icon("trash") + "Delete", admin_movement_campaign_path(@movement, @campaign), :method => :delete, :confirm => "Delete '#{@campaign.name}'?" if can?(:manage, @campaign) %>
<% end %>

<div class="description">
  <%= @campaign.description %>
</div>

<div class="list_group">
  <%= render :partial => "admin/campaigns/action_sequences" %>
  <%= render :partial => "admin/campaigns/pushes" %>

  <div id="ask-stats" class="stats-table list_group_item">
    <h3>Ask Statistics</h3>
    <%= render :partial => "ask_stats", :locals => {:stats => @stats} %>
    <%= will_paginate @stats %>
  </div>
  <div id="taf-stats" class="stats-table list_group_item">
    <h3>TAF Statistics</h3>
    <%= render :partial => "taf_stats", :locals => {:stats => @share_stats} %>
  </div>
  <div class="stats-table list_group_item">
    <h3>Donations Search</h3>
    <%= form_tag admin_movement_campaign_donations_path(@movement, params[:id]), :method => :get do %>
      <fieldset>
        <%= label_tag "Search for a member's donations to #{@campaign.name}:" %>
        <%= text_field_tag 'email', nil, :placeholder => "member@gmail.com" %>
      </fieldset>
      <%= submit_tag 'Search' %>
    <% end %>
  </div>
</div>

<%= render :partial => '/admin/shared/history', :locals => {:entity => @campaign} %>
<%= render :partial => "admin/campaigns/tooltips" %>
