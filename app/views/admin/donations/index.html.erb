<div>
  <h2>Search for donations by email</h2>
  <%= form_tag admin_movement_donations_path(@movement), :method => :get do %>
    <%= text_field_tag :email, nil, :placeholder => 'member@example.com' %>
    <%= submit_tag "Search" %>
  <% end %>

  <h3><%= "Donations for #{params[:email]}" if params[:email] %></h3>
  <% if @donations && @donations.any? %>
    <table>
      <thead>
        <th>Created at</th>
        <th>Frequency</th>
        <th>Recurring amount</th>
        <th>Recurring sum</th>
        <th>Last payment</th>
        <th>Actions</th>
      </thead>
      <tbody>
        <%= render partial: 'admin/donations/donation' , collection: @donations, :locals => { :movement => @movement } %>
      </tbody>
    </table>
  <% else %>
    <p><%= "No donations found." %></p>
  <% end %>
</div>
<div>
  <h2>Donation payments</h2>
  <%= link_to "View donation payments report", admin_movement_reporting_donations_path(@movement) %>
</div>
